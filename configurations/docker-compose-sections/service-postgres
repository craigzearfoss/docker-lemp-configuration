  db-postgres:
    image: postgres
    container_name: {{project_name}}-postgres
    restart: always
    environment:
      POSTGRES_DB: {{db_name}}
      POSTGRES_USER: {{db_username}}
      POSTGRES_PASSWORD: {{db_password}}
      PGDATA: /var/lib/postgresql/data
    logging:
      options:
        max-size: 10m
        max-file: "3"
    ports:
      - "{{db_exposed_port}}:5432"
    volumes:
      # - ./data/db:/var/lib/postgresql/data
    networks:
      - {{project_name}}

