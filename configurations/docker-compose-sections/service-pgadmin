  pgadmin:
    image: dpage/pgadmin4
    container_name: {{project_name}}-pgadmin
    environment:
      PGADMIN_DEFAULT_EMAIL: {{pgadmin_default_email}}
      PGADMIN_DEFAULT_PASSWORD: {{pgadmin_default_password}}
      PGADMIN_LISTEN_PORT: 80
    restart: always
    networks:
      - {{project_name}}
    depends_on:
      - db-{{service_db}}
    ports:
      - {{db_admin_port}}:80
    volumes:
      # - ./data/db:/var/lib/pgadmin

